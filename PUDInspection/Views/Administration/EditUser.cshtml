@model PUDInspection.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<h1>@ViewBag.Title</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RealName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RealName" class="form-control">
            <span asp-validation-for="RealName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EmailComfirmed" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EmailComfirmed" class="form-check-input">
            <span asp-validation-for="EmailComfirmed" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="VKLink" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="VKLink" class="form-control">
            <span asp-validation-for="VKLink" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Обновить</button>
            <a asp-action="ListUsers" class="btn btn-primary">Отмена</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Роли данного пользователя</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var user in Model.Roles)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">У данного пользователя нет ролей</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditRolesInUser" asp-controller="Administration" asp-route-userId="@Model.Id" class="btn btn-primary" style="width:auto">Добавить или удалить роли</a>
        </div>
    </div>
</form>