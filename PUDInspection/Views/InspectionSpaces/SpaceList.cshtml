@model IEnumerable<PUDInspection.Models.InspectionSpace>

@{
    ViewData["Title"] = "Пространства проверок";
}

<h1>Список пространств проверок</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Create">Создать новое пространство</a>

    foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Название : @item.Name
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
            </div>
            <div class="card-footer">
                @if (User.IsInRole("admin"))
                {
                    <a asp-action="EditInspectionSpace" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a>
                }
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Обзор</a>
                @if (User.IsInRole("admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Удалить</a>
                }
                </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Не создано ни одного пространства проверок
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Для создания пространства нажмите на кнопку
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-action="Create">
                Создать новое пространство
            </a>
        </div>
    </div>
}